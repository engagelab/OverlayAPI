# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    		 /                           	controllers.Application.index()

# Geo Features
POST			/geo						 controllers.Features.createGeoFeature()
PUT				/geo						 controllers.Features.updateGeoFeature()
DELETE			/geo						 controllers.Features.deleteAGeaoFeature(id:String, author_id:String)
GET				/geo						 controllers.Features.fetchAllGeoFeautres()
GET				/search/:hashTag			 controllers.HashTagManager.fetchGeoFeaturesByTag(hashTag:String)
GET				/user/:username				 controllers.Users.fetchGeoFeaturesByUser(username:String)


GET				/geo/box/					 controllers.Features.geoFeaturesInBoundingBox(lon1:String, lat1:String, lon2:String, lat2:String)


# Geo Content
GET				/image/:id					controllers.Features.showImage(id:String)
GET				/content/:id				controllers.Contents.contentOfFeature(id:String)
GET				/instagram/:id				controllers.Contents.contentOfInstaPOI(id:String)



##### Mapping Sessions ######
# Add Session
POST     		/project/new              	controllers.Sessions.create()
#POST     		/project                  	controllers.Sessions.save()
GET				/project/:id				controllers.Sessions.fetchProjectById(id:String)
DELETE			/project/:id/:user_id		controllers.Sessions.delete(id:String, user_id:String)

##### External Content
#GET				/external				controllers.InstagramParser.getPOIs(lon1:String, lat1:String, lon2:String, lat2:String)









# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
